<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/nav_login">

    <fragment
        android:id="@id/nav_login"
        android:label="label_nav_login"
        android:name="com.ce.cechat.view.fragment.login.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@id/action_nav_login_to_nav_sign_up"
            app:destination="@id/nav_sign_up">
        </action>

    </fragment>

    <fragment
        android:id="@id/nav_sign_up"
        android:label="label_nav_sign_up"
        android:name="com.ce.cechat.view.fragment.login.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@id/action_nav_sign_up_to_nav_login"
            app:destination="@id/nav_login">
        </action>
    </fragment>
</navigation>